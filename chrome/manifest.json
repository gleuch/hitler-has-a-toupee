{

  "name" :          "Hitler has a toupe",
  "version" :       "0.0.1",
  "description" :   "Showing the ugly underneath the touple, by @gleuch",
  "homepage_url" :  "http://gleu.ch",

  "icons": {
    "128" : "icons/icon128.png",
    "64" :  "icons/icon64.png",
    "48" :  "icons/icon48.png",
    "32" :  "icons/icon32.png",
    "16" :  "icons/icon16.png"
  },

  "manifest_version" : 2,

  "content_security_policy" : "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",

  "web_accessible_resources" : [
    "images/asshole.png",
    "images/blank.png"
  ],

  "permissions" :      [
    "contextMenus", 
    "tabs", 
    "http://*/*", 
    "https://*/*"
  ],

  "background" :  {
    "page" : "background.html"
  },

  "content_scripts" : [
    {
      "matches" : ["http://*/*", "https://*/*"],
      "js" : [
        "js/jquery-2.1.4.min.js",
        "js/run.js"
      ],
      "run_at" : "document_start"
    }
   ]

}
